<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:text="删除"
        android:textColor="@color/font_color"
        android:textSize="20sp" />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/music_sheet_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="确定删除 歌单名 吗？"
        android:textColor="@color/font_color"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_sccend_color"
        android:layout_margin="0dp"
        android:padding="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_sheet_button_left"
            android:gravity="center"
            android:onClick="cancel_button"
            android:padding="0dp"
            android:text="取消" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/stroke_sccend_color"
            android:layout_margin="0dp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/determine_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_sheet_button_right"
            android:gravity="center"
            android:onClick="determine_button"
            android:textColor="@color/determine_button_color"
            android:padding="0dp"
            android:text="确定" />

    </LinearLayout>

</LinearLayout>