<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/drawer_left_right_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:id="@+id/drawer_left_button_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:visibility="gone" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But04" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But03" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But02" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But01" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/drawer_right_button_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:visibility="gone" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But01" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But02" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But03" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="But04" />
    </LinearLayout>

</LinearLayout>