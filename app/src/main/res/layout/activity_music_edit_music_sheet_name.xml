<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="@string/input_music_sheet_name"
        android:textColor="@color/font_color"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/msuic_sheet_name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_marginBottom="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/edit_text_stroke"
        android:lines="1"
        android:maxLines="1"
        android:padding="8dp"
        android:scrollbars="none"
        android:textColor="#696969"
        android:textSize="14sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/stroke_sccend_color"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:orientation="horizontal"
        android:padding="0dp">

        <Button
            android:id="@+id/music_sheet_cancel_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_sheet_button_left"
            android:gravity="center"
            android:onClick="cancel_button"
            android:padding="0dp"
            android:text="取消" />
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/stroke_sccend_color"
            android:layout_margin="0dp"
            android:padding="0dp"/>

        <Button
            android:id="@+id/music_sheet_determine_button"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="0dp"
            android:layout_weight="1"
            android:background="@drawable/click_sheet_button_right"
            android:gravity="center"
            android:onClick="determine_button"
            android:padding="0dp"
            android:text="确定"
            android:textColor="@color/determine_button_color" />
    </LinearLayout>

</LinearLayout>
