<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/back_ground"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notification_music_album_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:backgroundTint="#0cb074" />

    <LinearLayout
        android:id="@+id/notification_64_all"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="8dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/notification_music_tittle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/font_seccend_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notification_music_artist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/stroke_color"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:layout_marginRight="4dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/notification_music_play_last"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/click_oval"
            android:src="@drawable/notification_music_play_last" />

        <ImageView
            android:id="@+id/notification_music_play_is_not"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/click_oval"
            android:src="@drawable/notification_music_play_not" />

        <ImageView
            android:id="@+id/notification_music_play_next"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/click_oval"
            android:src="@drawable/notification_music_play_next" />

        <ImageView
            android:id="@+id/notification_close"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/click_oval"
            android:src="@drawable/notification_close" />

    </LinearLayout>

</LinearLayout>