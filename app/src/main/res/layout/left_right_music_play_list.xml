<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/music_play_click_rectangle"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:paddingRight="8dp"
        android:paddingTop="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/music_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="2dp"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/music_play_list_font_color"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/music_artist_album"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="@color/music_play_list_font_seccend_color"
                android:textSize="11sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/music_is_playing"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/music_playing"
            android:visibility="invisible" />
    </LinearLayout>

    <View
        android:id="@+id/view_fgx"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/music_play_seccend_fengexian" />

</LinearLayout>
