<?xml version="1.0" encoding="utf-8"?>
<com.android.jiaqiao.View.MyFragmentLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/back_ground"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:background="@color/fengexian_color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:paddingTop="8dp">

                    <ImageButton
                        android:id="@+id/back_last_fragment"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/click_oval"
                        android:src="@drawable/arrow_left" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_alignParentBottom="true"
                        app:cardBackgroundColor="@color/back_ground"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="2dp"
                        app:contentPadding="16dp">

                        <TextView
                            android:id="@+id/show_all_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="歌单名"
                            android:textColor="@color/font_color"
                            android:textSize="20sp" />

                        <TextView
                            android:id="@+id/show_all_list_size"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:text="首歌"
                            android:textColor="@color/font_seccend_color"
                            android:textSize="14sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:layout_marginTop="68dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/music_sheet_delete"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/click_rectangle"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/music_delete" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="删除"
                                    android:textColor="@color/font_seccend_color"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/fengexian_color" />

                            <LinearLayout
                                android:id="@+id/music_sheet_modify"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/click_rectangle"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/music_modify" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="编辑"
                                    android:textColor="@color/font_seccend_color"
                                    android:textSize="10sp" />
                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/fengexian_color" />

                            <LinearLayout
                                android:id="@+id/music_sheet_add"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/click_rectangle"
                                android:gravity="center_horizontal"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/music_add" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="添加"
                                    android:textColor="@color/font_seccend_color"
                                    android:textSize="10sp" />
                            </LinearLayout>

                        </LinearLayout>


                    </android.support.v7.widget.CardView>

                </RelativeLayout>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/fengexian_color" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/show_all_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="0dp"
                android:layoutAnimation="@anim/anim_recycle_view_item"
                android:background="@color/touming"
                android:scrollbars="vertical"/>


            <TextView
                android:id="@+id/no_music"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:gravity="center"
                android:text="@string/no_music_list_size_0"
                android:textColor="@color/fengexian_color"
                android:textSize="16sp"
                android:visibility="gone" />


        </LinearLayout>

    </ScrollView>


</com.android.jiaqiao.View.MyFragmentLayout>
